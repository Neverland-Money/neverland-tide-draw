{
  "name": "neverland-tide-draw",
  "version": "1.0.0",
  "description": "Neverland Leaderboard Winner Selection",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"*.json\" \"*.yaml\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.json\" \"*.yaml\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test:build": "tsc -p tsconfig.json --outDir dist-test --sourceMap",
    "test": "npm run test:build && node --test dist-test/__tests__/*.test.js",
    "test:coverage": "npm run test:build && c8 --reporter=text --reporter=lcov --reporter=html node --test dist-test/__tests__/*.test.js",
    "test:coverage:check": "npm run test:coverage -- --check-coverage --lines 100 --functions 100 --branches 100 --statements 100",
    "type-check": "envio codegen && tsc --noEmit",
    "prepare": "husky",
    "fetch-leaderboard": "tsx src/fetch-leaderboard.ts",
    "pick-winners": "tsx src/pick-winners.ts",
    "export-report": "tsx src/export-report.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "dependencies": {
    "dotenv": "^17.2.3",
    "graphql": "^16.12.0",
    "graphql-request": "^7.4.0",
    "pino": "^9.9.5",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
